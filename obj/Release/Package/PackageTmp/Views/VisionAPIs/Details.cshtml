@model GoogleCloudSamples.Models.VisionAPI

<h3>Image Detection using Vision API</h3>
<form method="post" action="/VisionAPIs/Delete/@Model.Id"
      id="deleteForm">
    @Html.AntiForgeryToken()
    <div class="btn-group">
        <a href="/VisionAPIs/Edit/@Model.Id"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            Edit Image
        </a>
        <button id="submit" type="submit" class="btn btn-danger btn-sm">
            <i class="glyphicon glyphicon-trash"></i>
            Delete Image
        </button>
    </div>
</form>

<div class="media">
    <div class="media-left">
        <!-- [START VisionAPIimage] -->
        <img class="visionapi-image"
             src="@(String.IsNullOrEmpty(Model.ImageUrl) ?
        "http://placekitten.com/g/128/192" : Model.ImageUrl)">
        <!-- [END VisionAPIImage] -->        
    </div>
    <div class="media-body">
        <h4 class="visionapi-title">
            @Model.Title
            <small>@(Model.PublishedDate)</small>
        </h4>
        <p class="visionapi-description">@Model.JsonDescription</p>
    </div>
</div>