@model GoogleCloudSamples.ViewModels.VisionAPIs.Index

<h3>Image Detection using Vision API</h3>
<a href="/VisionAPIs/Create" class="btn btn-success btn-sm" id="add-visionapi">
    <i class="glyphicon glyphicon-plus"></i>
    Add images
</a>

@foreach (var visionapi in Model.VisionAPIList.VisionAPIs)
{
    <div class="media">
        <a href="/VisionAPIs/Details/@visionapi.Id">
            <div class="media-left">
                @if (!String.IsNullOrEmpty(visionapi.ImageUrl))
                {
                    <img src="@visionapi.ImageUrl">
                }
                else {
                    <img src="http://placekitten.com/g/128/192">
                }
            </div>
            <div class="media-body">
                <h4>@visionapi.Title</h4>
            </div>
        </a>
    </div>
}

@if (Model.VisionAPIList.VisionAPIs.Count() == 0)
{
    <p>No Images found</p>
}

@if (null != Model.VisionAPIList.NextPageToken)
{
    <nav>
        <ul class="pager">
            <li><a href="?nextPageToken=@Model.VisionAPIList.NextPageToken">More</a></li>
        </ul>
    </nav>
}